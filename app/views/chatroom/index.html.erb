
<h2 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  ChatRoom
</h2>

<div class="ui two column grid container">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <h4 class="ui header">Conversation</h4>
          <%= render @messages %>          
        </div> 
      </div> 
      <div class="extra content">
        <%= form_for(@message, url: message_path, class: "ui reply form", role: "form") do |f| %>
          <div class="field">
            <div class="ui left fluid icon input">
              <%= f.text_field :body, placeholder: "Enter a message..." %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>              
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">

        <div class="ui inverted fluid vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>    
    </div>
  </div>
</div>






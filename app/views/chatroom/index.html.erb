
<h2 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  ChatRoom
</h2>

<div class="ui two column grid container">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <h4 class="ui header">Conversation</h4>
          
          <% @messages.each do |message| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= message.user.username.capitalize %>:</em> <%= message.body %>
                </div>
              </div>
            </div>
          <% end %>
          
        </div> 
      </div> 
      <div class="extra content">
          <form class="ui reply form">
            <div class="field">
              <div class="ui left fluid icon input">
                <input type="text" placeholder="Enter a message...">
                <i class="bordered inverted orange edit icon"></i>
              </div>
            </div>
          </form>
        </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">

        <div class="ui inverted fluid vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>    
    </div>
  </div>
</div>





